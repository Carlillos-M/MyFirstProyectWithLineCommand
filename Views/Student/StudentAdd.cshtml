@{
    ViewData["Title"] = "Alta de Estudientes";
}


<div class="text-center">
    <h1 class="display-2">Alta de Alumnos</h1>  
</div>

<form asp-controller="Student" asp-action="StudentSave">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba el Nombre del Alumno" />
    </div>

    <div class="mb-3">
        <label for="nombre" class="form-label">Matricula</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba la Matricula" />
    </div>

    <div class="mb-3">
        <label for="nombre" class="form-label">Carrera</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba la Carrera" />
    </div>

    <div class="mb-3">
        <label for="nombre" class="form-label">Sexo</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba el Sexo" />
    </div>

     <div class="mb-3">
        <label for="nombre" class="form-label">Edad</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba la Edad" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Student" asp-action="StudentList" class="btn btn-secundary mb-3">Regresar</a>
</form>