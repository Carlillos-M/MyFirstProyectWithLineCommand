@{
    ViewData["Title"] = "Alta de Maestros";
}


<div class="text-center">
    <h1 class="display-2">Alta de Maestros</h1>  
</div>

<form asp-controller="Teacher" asp-action="TeacherSave">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba el Nombre del Maestro" />
    </div>

    <div class="mb-3">
        <label for="nombre" class="form-label">Carrera</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escriba la Carrera del Maestro" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-controller="Teacher" asp-action="TeacherList" class="btn btn-secundary mb-3">Regresar</a>
</form>